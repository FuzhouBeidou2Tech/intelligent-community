/* CSS 样式 */

/* 设置容器为相对定位，这样内部的绝对定位元素可以相对于容器定位 */
.container {
  position: relative;
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px;
  box-sizing: border-box;
}

.text{
  width: 70%;
  height: 100rpx;
  border: 1px solid orange;
  background-color: orange;
  color: white;
  border-radius: 17px;
  text-align: center;
  line-height: 90rpx;
  position: absolute;
  top:20%;
}
/* 访客按钮容器 */
.visitor {
  position: absolute; /* 绝对定位 */
  left: 20px; /* 左边距，距离容器左边20px */
  top:40%;
}

/* 用户按钮容器 */
.user {
  position: absolute; /* 绝对定位 */
  right: 20px; /* 右边距，距离容器右边20px */
  top:40%;
}

/* 访客按钮样式 */
.visitor-btn {
 
  background-color: grey; /* 按钮背景颜色为灰色 */
  color: white; /* 按钮文字颜色为白色 */
  font-size: 16px; /* 按钮文字大小 */
  border: none; /* 去掉默认边框 */
  border-radius: 37px; /* 设置圆角 */
  text-align: center; /* 水平居中 */
  line-height: 120px; /* 使得文本垂直居中 */
}

/* 用户按钮样式 */
.user-btn {
  
  background-color: green; /* 按钮背景颜色为绿色 */
  color: white; /* 按钮文字颜色为白色 */
  font-size: 16px;
  border: none; /* 去掉默认边框 */
  border-radius: 37px; /* 设置圆角 */
  text-align: center; /* 水平居中 */
  line-height: 120px; /* 使得文本垂直居中 */
}