/* pages/index/index.wxss */

.container {
  padding: 20rpx;
  background-color: #f0f0f0;
}

.section {
  margin-bottom: 40rpx;
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  width: 100%;
}
.section-title-container{
  display:flex;
  justify-content: space-between;
}
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #eeeeee;
  padding-bottom: 10rpx;
}


.more-notification{
  color: #6b6868;
  font-size: medium;
}

.notification-container {
  width: 100%;
  height: 107rpx;
  line-height: 50rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column; /* 垂直排列每个通知 */
}

.notification {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between; /* 保证内容和箭头左右分布 */
  padding: 0 5rpx; /* 给每个通知一些内边距 */
  border-bottom: 1px solid #e0e0e0; /* 添加下划线 */
}

/* 紧急通知样式 */
.urgent-container {
  background-color: #ffffff; 
  padding: 0 10rpx;
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: space-between; /* 左边内容和右边箭头分开 */
}
.nourgent-container{
  background-color: #ffffff; 
  padding: 0 10rpx;
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: space-between; /* 左边内容和右边箭头分开 */
}
.urgent-icon {
  color: #ff0000;
  font-weight: bold;
  margin-right: 10rpx;
}

.notificationText {
  color: #333333;
  font-size: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex: 1; /* 让文本占据多余空间 */
}

.intonotificationClick {
  color: #666666;
  font-size: 30rpx;
  margin-left: auto; /* 将箭头固定在最右侧 */
}

.item-icon{
  width: 70rpx;
  height: 70rpx;
  
}








.announcement-content {
  display: inline-block;
  white-space: nowrap;
  animation: scroll 10s linear infinite;
}

@keyframes scroll {
  0% {
    transform: translateX(100%);
  }
  100% {
    transform: translateX(-100%);
  }
}

.quick-services {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%; /* Adjust width to fit three items per row */
  margin-bottom: 20rpx;
}

.service-item text {
  margin-top: 10rpx;
  font-size: 28rpx;
}

.activities {
  display: flex;
  flex-direction: column;
}

.activity-item {
  display: flex;
  margin-bottom: 20rpx;
}

.activity-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 10rpx;
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
  margin-right: 20rpx;
}

.activity-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.activity-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.activity-description {
  font-size: 26rpx;
  color: #888888;
}

.promotions {
  display: flex;
  flex-wrap: wrap;
}

.promotion-item {
  width: 48%;
  margin-bottom: 20rpx;
  background-color: #fafafa;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.promotion-image {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
}

.promotion-info {
  padding: 20rpx;
}

.promotion-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.promotion-description {
  font-size: 24rpx;
  color: #666666;
}