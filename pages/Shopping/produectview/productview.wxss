/* pages/Shopping/produectview/productview.wxss */
.productview-Container{
  background-color: #f0f0f0;
  height: 100vh;
}
/* 图片 */
.activity-Container {
  display: flex;
  flex-direction: column;
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.Title-Container {
  width: 95%;
  margin: 0 auto;
  background-color: white;
  border-radius: 15rpx;
  margin-top: 30rpx;
}

.image-container {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  
}
/* Body */
.body-Container{
  margin-top: 15rpx;
}
.product-price{
  color: red;
  font-size: 35rpx;
}
/* 商品详情 */
.description-Container{
  width: 95%;
  margin: 0 auto;
  background-color: white;
  border-radius: 15rpx;
  margin-top: 20rpx;
}