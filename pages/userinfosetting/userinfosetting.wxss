/* 用户地址 */
.useraddress-container{
  width: 90%;
  height: 150rpx;
}

.card-container{
  width: 100%;
  height: 60%;
  display: flex;
  border-radius: 30rpx;
  margin-top: 50rpx; /* 设置与卡片的间距 */
  padding: 0 20px;
  background-color: #f5f5f5; 
  box-sizing: border-box;
   /* 确保 body-container 占据剩余空间 */
  box-shadow:inset 5px 5px 10px rgba(0, 0, 0, 0.3);
  
}
.useraddress-submit{
  margin-top: 20rpx;
}
.useraddress-button{
  color: orange;
