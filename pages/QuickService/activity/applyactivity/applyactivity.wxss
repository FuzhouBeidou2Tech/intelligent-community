/* 容器样式 */
.applayactivity-Container {
  padding: 32rpx;
  background-color: #f5f5f5;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  height: 100vh;
}

/* 头部样式 */
.header-Container {
  margin-bottom: 32rpx;
  text-align: center;
}

.activity-name {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.activity-item {
  font-size: 32rpx;
  color: #555;
  margin-bottom: 8rpx;
}

/* 内容体样式 */
.body-Container {
  margin-bottom: 32rpx;
}

.setusername-Container,
.setuserphone-Container,
.setemergencyname-Container,
.setemergencyphone-Container {
  margin-bottom: 24rpx;
  font-size: 32rpx;
  color: #333;
}

/* 输入框样式 */
input {
  height: 60rpx;
  margin-top: 8rpx;
  padding-left: 16rpx;
  width: 100%;
  font-size: 32rpx;
  box-sizing: border-box;
  border: 1px solid #ccc;
  border-radius: 4px;
  outline: none;
  transition: border-color 0.3s;
}

input:focus {
  border-color: #007aff; /* 改变为主题色的蓝色 */
}

/* 按钮样式 */
.apply-button {
  display: block;
  text-align: center;
  background-color: #ff5722; /* 按钮背景色 */
  color: #fff;
  padding: 12px;
  font-size: 18px;
  border-radius: 4px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.apply-button:hover {
  background-color: #e64a19; /* 悬停状态背景色 */
}