/* pages/notification/notificationhome/notificationhome.wxss */
.notification-container{
  background-color: #f0f0f0;
  height: 100vh;
  padding: 5rpx;
}

.notification{
  border: 3rpx solid black;
  border-radius: 25rpx;
  margin: 0 auto; 
  margin-top: 40rpx;
  background-color: white;
  width: 80%;
}
.title{
  text-align: center;
  margin-top: 5rpx;
}
.info-container{
  display: flex;
  flex-wrap: wrap; 
}

.item{
  flex-basis: calc(50% - 20rpx);
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  margin-left: 20rpx;
}